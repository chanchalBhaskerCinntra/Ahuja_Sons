<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/size_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_grey_background"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/size_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/sr_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condensor"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />



        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/add_botton"
                android:layout_toLeftOf="@id/count"
                android:background="@drawable/add_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/count"
                android:layout_width="@dimen/size_50"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_toLeftOf="@id/remove"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/remove"
                android:background="@drawable/remove_exiest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/itemcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sr_no"
            android:layout_marginTop="@dimen/size_5"
            android:text="ItemCode: ICOO1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />


        <TextView
            android:visibility="gone"
            android:id="@+id/stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemcode"
            android:layout_marginTop="@dimen/size_5"
            android:text="Stock quantity : 5"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock"
            android:layout_marginTop="@dimen/size_5"
            android:text="Price : Rs. 10500"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />



    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>