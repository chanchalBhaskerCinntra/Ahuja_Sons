<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProductDetailActivity">

    <FrameLayout
        android:id="@+id/frame_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorMassaedPrimary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/back_press"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_arrow_back_24"
                        android:backgroundTint="@color/white" />

                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_20"
                        android:layout_toRightOf="@id/back_press"
                        android:text="Product Detail"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />


                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar1"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/billingAddressLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/size_45"
                                android:layout_weight="1"
                                android:background="@drawable/heading_bg_shape"
                                android:gravity="center_vertical"
                                android:text="Products Details  "
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_14" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="20dp"
                            android:paddingStart="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Customer Name"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvCustomer"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Branch Name"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvBranch"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Address"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="City"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Zone"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvZone"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Item Group Code"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvItemGroupCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Items Group Name"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvItemsGroupName"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Item Code"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvItemCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Item Name"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvItemName"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Contract Name"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvContractName"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Unit Price"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvUnitPrice"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Product Type"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvProductType"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Model No"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvModelNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Serial No"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvSerialNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Warranty Start Date"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvWarrantyStartDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Warranty End Date"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvWarrantyEndDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Installation Date"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvInstallationDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Site Survey Date"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvSiteSurveyDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Commissioning Date"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvCommissioningDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="De-Installation Date"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvDeInstallationDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Re Installation Date"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvReInstallationDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="40dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Remarks"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/tvRemarks"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>