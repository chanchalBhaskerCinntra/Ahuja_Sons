<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:id="@+id/surgeryCoordinatorLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/fillOutFormForSurgeryPersonLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="6dp"
                    android:paddingTop="10dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Add Surgery Person"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivCloseDialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_close_circle" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="70"
                                android:text="Surgery Person 1"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Select">

                            <AutoCompleteTextView
                                android:id="@+id/acSurgeryPerson1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:gravity="start"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Surgery Person 2"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Select">

                            <AutoCompleteTextView
                                android:id="@+id/acSurgeryPerson2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:gravity="start"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSurgeryPersons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:itemCount="2"
                            tools:listitem="@layout/add_surgery_person_layout" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addSurgeryPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Add"
                            android:visibility="visible"
                            app:cornerRadius="30dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:paddingBottom="10dp">


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/cancelSurgeryPerson"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="20dp"
                                android:backgroundTint="@color/white"
                                android:text="Cancel"
                                android:textColor="@color/colorPrimary"
                                app:cornerRadius="30dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/submitSurgeryPerson"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:text="Submit"
                                app:cornerRadius="30dp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/surgeryDetailLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/size_8"
                    app:cardElevation="@dimen/size_4"
                    app:cardMaxElevation="@dimen/size_4"
                    app:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/size_45"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="40"
                                android:background="@drawable/heading_bg_shape"
                                android:gravity="center_vertical"
                                android:text="Surgery Person  "
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_14" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:paddingEnd="10dp">

                                <TextView
                                    android:id="@+id/tvEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="40"
                                    android:gravity="center_vertical"
                                    android:text="Edit"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_14" />

                                <ImageView
                                    android:id="@+id/surgeryPDownArrow"
                                    android:layout_width="@dimen/text_size_14"
                                    android:layout_height="@dimen/text_size_14"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/down_arrow_icon"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/surgeryPUpArrow"
                                    android:layout_width="@dimen/text_size_14"
                                    android:layout_height="@dimen/text_size_14"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/arrow_up_icon"
                                    android:visibility="gone" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/surgeryPDetailsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/size_4"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tvSurgeryPersonCounter1"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Surgery Person 1"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvSurgeryPerson1"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Dr. Yatendra Mishra"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/size_4"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tvSurgeryPersonCounter2"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Surgery Person 2"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvSurgeryPerson2"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Dr. Yatendra Mishra"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvSurgeryPersonsList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:itemCount="2"
                                tools:listitem="@layout/item_surgery_coordinator_person_list" />


                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>