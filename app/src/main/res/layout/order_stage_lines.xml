<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/tickView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tick_green"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:background="@drawable/tick_square_grey"
            android:visibility="visible" />


        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/text_size_3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tick_green"
            android:background="@color/lightGrey" />

    </RelativeLayout>

    <TextView
        android:id="@+id/stage_name"
        android:layout_width="@dimen/size_80"
        android:layout_height="wrap_content"
        android:layout_below="@id/tickView"
        android:layout_marginLeft="@dimen/size_5"
        android:ellipsize="end"
        android:textStyle="bold"
        android:maxLines="1"
        android:text="Initial"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_13" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stage_name"
        android:text="09/05/2024"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />


</RelativeLayout>