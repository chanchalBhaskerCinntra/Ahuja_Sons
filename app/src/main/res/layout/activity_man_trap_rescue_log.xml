<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ManTrapRescueLogActivity">

    <include
        android:id="@+id/toolbarManTrap"
        layout="@layout/toolbar_global"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardManTrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarManTrap">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMassaedSecondary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageHolder"
                android:layout_width="@dimen/text_size_36"
                android:layout_height="@dimen/text_size_36"
                android:layout_margin="@dimen/size_8"
                android:src="@drawable/ic_log_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvUpdateCurrentStatus"
                style="@style/textViewBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/size_8"
                android:drawableEnd="@drawable/ic_add_text_logo"
                android:drawablePadding="@dimen/size_4"
                android:text="@string/update_current_status"
                android:textColor="#2858E4"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageHolder"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageBellIcon"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_8"
                android:foregroundGravity="right"

                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.github.loadingview.LoadingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:id="@+id/loader"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.simform.refresh.SSPullToRefreshLayout
        android:id="@+id/ssPullRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/size_55"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardManTrap">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvManTrap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"

            tools:listitem="@layout/item_man_tap_list"

            />

    </com.simform.refresh.SSPullToRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>