<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainframelayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_collapseMode="pin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />

            <LinearLayout
                android:id="@+id/openThreeDotMenu"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linearHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginTop="@dimen/size_5"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@id/name_icon"
            android:background="@color/blueLightShade"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingTop="4dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:text="Cinntra Infotech"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="10dp">


            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_group_18584" />

            <LinearLayout
                android:id="@+id/nameDetailLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name_icon"
                android:layout_weight="90"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_toRightOf="@id/name_icon"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Cinntra Infotech"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvOrderID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_name"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_toRightOf="@+id/name_icon"
                        android:layout_weight="50"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Dr. Vijay Chauhan"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_name"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_toRightOf="@+id/name_icon"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Order ID : 12345"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvExpectedData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOrderID"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/name_icon"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Order Information : Borem ipsum dolor sit hue , kdnm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@id/nameDetailLayout"
                android:layout_weight="10"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/headerDownArrow"
                    android:layout_width="@dimen/text_size_14"
                    android:layout_height="@dimen/text_size_14"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/down_arrow_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/headerUpArrow"
                    android:layout_width="@dimen/text_size_14"
                    android:layout_height="@dimen/text_size_14"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/arrow_up_icon"
                    android:visibility="visible" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_2"
            android:layout_marginTop="@dimen/size_10"
            android:background="@color/divider_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginTop="@dimen/size_5"
                android:layout_weight="50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Status :"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"

                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dimen_8"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_name"
                    android:layout_gravity="end"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_toRightOf="@+id/name_icon"
                    android:layout_weight="50"
                    android:drawableStart="@drawable/ic_check_green"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Delivery Inspection"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_name"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_toRightOf="@+id/name_icon"
                    android:layout_weight="50"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Surgery Date &amp; Time :12/11/2024 12:0:00"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_12"

                    android:visibility="visible" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_8"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/btnTrip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvClickStartText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"

                android:layout_margin="@dimen/dimen_8"
                android:paddingStart="10dp"
                android:text="Assigned To "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/tvDeliveryPerson"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDeliveryPerson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableStart="@drawable/courier_small"
                android:drawablePadding="@dimen/size_4"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Delivery Person: Arvind, Raman, Kartik"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:visibility="visible"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvClickStartText"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/headingVehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"

                android:layout_margin="@dimen/dimen_8"
                android:paddingStart="10dp"
                android:text="Vehicle No. "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/tvDeliveryPerson"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDeliveryPerson" />

            <TextView
                android:id="@+id/tvVehicleNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@color/white"

                android:drawablePadding="@dimen/size_4"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="   UP O4M 9876"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:visibility="visible"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvClickStartText"
                app:layout_constraintTop_toTopOf="@id/headingVehicle" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/btnTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:background="@drawable/round"
        android:text="Start Trip"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/btnENdTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:background="@drawable/round"
        android:text="End Trip"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />


    <FrameLayout
        android:id="@+id/loadingBackFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3B505050"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.loadingview.LoadingView
            android:id="@+id/loadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


