<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Account Name"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/account_name_val"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Rupal Dhruv"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/customer"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/tvAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/email"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/email_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/mobile"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Landline Number"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/tvLandlineNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Industry"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/tvIndustry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="India"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Type"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Website"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/website_val"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Payment Terms"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/tvPaymentTerm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Parent Account"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/tvParentAccount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Account Owner"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/date_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Zone"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/zone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="GST Number"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/gstnumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Service Employee"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tvServiceEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Remarks"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tvRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Contact Person"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/contacname_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Contact Person Email"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tvContactEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Contact Person Mobile No."
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tvContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Contact Person Designation"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tvContactDesignation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/billingAddressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:background="@drawable/heading_bg_shape"
                        android:gravity="center_vertical"
                        android:text="Address Details  "
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Billing Name"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14" />


                    <TextView
                        android:id="@+id/tvBillingName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Billing Address"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14" />


                    <TextView
                        android:id="@+id/tvBillingAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="City"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="ZipCode"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_zipcode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="State"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Country"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Shipping Type"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tvShippingTyper"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Remarks"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tvAddressRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_45"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/progressBarLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>