<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18" />


                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/size_15"
                    android:background="@drawable/ic_logout"
                    android:backgroundTint="@color/white"
                    android:visibility="visible" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_10">


                    <ImageView
                        android:id="@+id/name_icon"
                        android:layout_width="@dimen/size_70"
                        android:layout_height="@dimen/size_70"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_group_18584" />


                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_toRightOf="@id/name_icon"
                        android:text="Cinntra Infotech"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_name"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_toRightOf="@id/name_icon"
                        android:text="cinntra@gmail.com"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />


                    <TextView
                        android:id="@+id/role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mail"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_toRightOf="@id/name_icon"
                        android:drawableLeft="@drawable/ic_grey_dot"
                        android:drawablePadding="@dimen/size_10"
                        android:drawableTint="@color/green"
                        android:text="Online"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tvEmployeeID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/role"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_toRightOf="@id/name_icon"
                        android:drawablePadding="@dimen/size_10"
                        android:text="ID - "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@color/veryLightGrey">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_15"
                        android:text="Themes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_15"
                    android:layout_marginRight="@dimen/size_10"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Language"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:drawableTint="@color/colorPrimary"
                        android:gravity="right"
                        android:text="English"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_marginTop="@dimen/size_15"
                    android:background="@color/lightGrey" />


                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Offline mode"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_marginTop="@dimen/size_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_15"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_15"
                    android:layout_marginRight="@dimen/size_10"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:drawableStart="@drawable/ic_version_icon"
                        android:drawablePadding="@dimen/size_8"
                        android:drawableTint="@color/lightGrey"
                        android:gravity="center_vertical"
                        android:text="@string/app_version"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/feedback"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:layout_marginTop="@dimen/size_10"
                        android:drawableStart="@drawable/ic_baseline_message_24"
                        android:drawablePadding="@dimen/size_8"
                        android:drawableTint="@color/lightGrey"
                        android:gravity="center_vertical"
                        android:text="Feedback"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/rateus"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40"
                        android:layout_marginTop="@dimen/size_10"
                        android:drawableStart="@drawable/ic_flat_color_icons_rating"
                        android:drawablePadding="@dimen/size_8"
                        android:gravity="center_vertical"
                        android:text="Rate us"
                        android:textColor="@color/black" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_marginTop="@dimen/size_15"
                    android:background="@color/lightGrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_40"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_15"
                        android:gravity="center_vertical"
                        android:text="Others"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                    <TextView
                        android:id="@+id/clearcache"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_40"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_15"
                        android:gravity="center_vertical"
                        android:text="Clear cache"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_40"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_15"
                        android:gravity="center_vertical"
                        android:text="Reset App"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>