<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainframelayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsetoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_60"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="5dp"
                    android:layout_toRightOf="@id/name_icon"
                    android:background="@color/blueLightShade"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="15dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:text="Cinntra Infotech"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginBottom="10dp">


                    <ImageView
                        android:id="@+id/name_icon"
                        android:layout_width="@dimen/size_35"
                        android:layout_height="@dimen/size_35"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_group_18584" />

                    <LinearLayout
                        android:id="@+id/nameDetailLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/name_icon"
                        android:layout_weight="90"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_15"
                            android:layout_marginTop="@dimen/size_5"
                            android:layout_toRightOf="@id/name_icon"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Cinntra Infotech"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvOrderID"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/company_name"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_marginTop="@dimen/size_5"
                                android:layout_toRightOf="@+id/name_icon"
                                android:layout_weight="50"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Dr. Vijay Chauhan"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/text_size_12"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/company_name"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_marginTop="@dimen/size_5"
                                android:layout_toRightOf="@+id/name_icon"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Order ID : 12345"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/text_size_12"
                                android:textStyle="bold"
                                android:visibility="visible" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvExpectedData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvOrderID"
                            android:layout_marginLeft="@dimen/size_15"
                            android:layout_marginTop="@dimen/size_5"
                            android:layout_marginRight="5dp"
                            android:layout_toRightOf="@+id/name_icon"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Order Information : Borem ipsum dolor sit hue , kdnm"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12"
                            android:visibility="visible" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/nameDetailLayout"
                        android:layout_weight="10"
                        android:background="@drawable/ripple_effect"
                        android:clickable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/headerDownArrow"
                            android:layout_width="@dimen/text_size_14"
                            android:layout_height="@dimen/text_size_14"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/down_arrow_icon"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/headerUpArrow"
                            android:layout_width="@dimen/text_size_14"
                            android:layout_height="@dimen/text_size_14"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/arrow_up_icon"
                            android:visibility="visible" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_2"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="50"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Status :"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_16"

                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/company_name"
                            android:layout_gravity="end"
                            android:layout_marginLeft="@dimen/size_15"
                            android:layout_marginTop="@dimen/size_5"
                            android:layout_toRightOf="@+id/name_icon"
                            android:layout_weight="50"
                            android:drawableStart="@drawable/ic_check_green"
                            android:drawablePadding="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Delivered"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_12"
                            android:textStyle="bold"
                            android:visibility="visible" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/company_name"
                            android:layout_marginLeft="@dimen/size_15"
                            android:layout_marginTop="@dimen/size_5"
                            android:layout_toRightOf="@+id/name_icon"
                            android:layout_weight="50"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Surgery Date &amp; Time :12/11/2024 12:0:00"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_12"

                            android:visibility="visible" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:layout_collapseMode="pin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />

                    <LinearLayout
                        android:id="@+id/openThreeDotMenu"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:gravity="end"
                        android:paddingEnd="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/threedots"
                            android:backgroundTint="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="@dimen/size_80"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar">



        <LinearLayout
            android:id="@+id/surgeryCoordinatorLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearHeader">


            <LinearLayout
                android:id="@+id/fillOutFormForSurgeryPersonLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Add Surgery Person"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="70"
                                android:text="Surgery Person 1"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/addSurgeryPerson"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:text="Add"
                                app:cornerRadius="30dp" />

                        </LinearLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Select">

                            <AutoCompleteTextView
                                android:id="@+id/acSurgeryPerson1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:gravity="start"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Surgery Person 2"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Select">

                            <AutoCompleteTextView
                                android:id="@+id/acSurgeryPerson2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:gravity="start"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSurgeryPersons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:itemCount="2"
                            tools:listitem="@layout/add_surgery_person_layout" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/surgeryDetailLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/size_8"
                    app:cardElevation="@dimen/size_4"
                    app:cardMaxElevation="@dimen/size_4"
                    app:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/size_45"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="40"
                                android:background="@drawable/heading_bg_shape"
                                android:gravity="center_vertical"
                                android:text="Surgery Person  "
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_14" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:gravity="end"
                                android:orientation="vertical"
                                android:paddingEnd="10dp">

                                <TextView
                                    android:id="@+id/tvEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="40"
                                    android:layout_marginEnd="8dp"
                                    android:gravity="center_vertical"
                                    android:text="Edit"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_size_14" />

                                <ImageView
                                    android:id="@+id/surgeryPDownArrow"
                                    android:layout_width="@dimen/text_size_14"
                                    android:layout_height="@dimen/text_size_14"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/down_arrow_icon"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/surgeryPUpArrow"
                                    android:layout_width="@dimen/text_size_14"
                                    android:layout_height="@dimen/text_size_14"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/arrow_up_icon"
                                    android:visibility="gone" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/surgeryPDetailsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/size_4"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tvSurgeryPersonCounter1"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Surgery Person 1"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvSurgeryPerson1"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Dr. Yatendra Mishra"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/size_4"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tvSurgeryPersonCounter2"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Surgery Person 2"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size_14" />


                                <TextView
                                    android:id="@+id/tvSurgeryPerson2"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/size_45"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Dr. Yatendra Mishra"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14" />


                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvSurgeryPersonsList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:itemCount="2"
                                tools:listitem="@layout/item_surgery_coordinator_person_list" />



                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/dimen_8"
        android:background="@drawable/round"
        android:text="Submit"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>


