<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_5"
        app:cardUseCompatPadding="true"
        android:gravity="center_vertical"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/size_5">


    <RelativeLayout
        android:padding="@dimen/size_5"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <com.lid.lib.LabelTextView
            android:visibility="gone"
            android:id="@+id/priority"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:textColor="@color/white"
            app:label_backgroundColor="@color/red"
            app:label_distance="20dp"
            app:label_orientation="LEFT_TOP"
            app:label_text="Medium"
            app:label_textSize="10sp" />

        <RelativeLayout
            android:layout_toRightOf="@id/priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_vector__19_" />

        <TextView
            android:id="@+id/sr_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_toRightOf="@id/message_icon"
            android:text="#1234"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="26/08/2022, 06:40 PM"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />


            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sr_no"
                android:layout_marginTop="@dimen/size_10"
                android:text="BpName"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_value"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_10"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvSolID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCustomerName"
                android:layout_marginTop="@dimen/size_10"
                android:text="sdcsdc"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />



            <TextView
                android:id="@+id/tvTicketType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_below="@+id/tvSolID"
                android:text="installation"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTicketType"
                android:layout_marginTop="@dimen/size_10"
                android:text="assigned to"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />


        <TextView
            android:visibility="visible"
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"

            android:layout_marginTop="@dimen/size_10"

            android:text="Cinntra"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal" />


            <ImageView
                android:id="@+id/imageman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_group_18576" />


            <ImageView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginRight="@dimen/size_10"
                android:layout_toLeftOf="@id/imageman"
                android:background="@drawable/ic_chatting" />

            <ImageView

                android:id="@+id/blink"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:layout_below="@id/name"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginRight="@dimen/size_10"
                android:layout_toLeftOf="@id/chat"
                android:background="@drawable/ic_grey_dot"
                android:backgroundTint="@color/red" />

        </RelativeLayout>


    </RelativeLayout>

        <ImageView
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="right"
            android:orientation="vertical"
            android:id="@+id/color_type"
           android:layout_gravity="right"
            android:layout_width="@dimen/size_2"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/green"
            android:layout_height="match_parent">


        </ImageView>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>