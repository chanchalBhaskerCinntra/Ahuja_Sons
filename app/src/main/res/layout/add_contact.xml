<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_edit_qt_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarContact"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Contact"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />


                    <ImageView

                        android:id="@+id/ivAddContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_15"
                        android:background="@drawable/ic_baseline_done_24"
                        android:backgroundTint="@color/white"
                        android:visibility="invisible" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <ScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginRight="@dimen/size_15"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/size_10">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imag5"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginLeft="@dimen/size_4"
                            android:padding="@dimen/size_5"
                            android:src="@drawable/person" />

                        <EditText
                            android:id="@+id/name_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@id/imag5"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/first_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/size_5"
                            android:textColorHint="@color/light_grey_box"
                            android:textSize="@dimen/text_size_14" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/first_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginLeft="@dimen/size_4"
                            android:padding="@dimen/size_5"
                            android:src="@drawable/person" />

                        <EditText
                            android:id="@+id/first_name_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@id/image1"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/first_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/size_5"
                            android:textColorHint="@color/light_grey_box"
                            android:textSize="@dimen/text_size_14" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15"
                        android:text="@string/last_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginLeft="@dimen/size_4"
                            android:padding="@dimen/size_5"
                            android:src="@drawable/person" />

                        <EditText
                            android:id="@+id/last_name_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@id/image2"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/last_name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/size_5"
                            android:textColorHint="@color/light_grey_box"
                            android:textSize="@dimen/text_size_14" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/business_partner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15"
                        android:text="@string/customer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <RelativeLayout
                        android:id="@+id/bussinessPartner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size_10"
                        android:paddingRight="@dimen/size_10">

                        <AutoCompleteTextView
                            android:id="@+id/business_partner_value"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/img"
                            android:background="@color/transparent"
                            android:clickable="true"
                            android:duplicateParentState="false"
                            android:focusable="true"
                            android:gravity="start|center_vertical"
                            android:hint="@string/customer"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/size_5"
                            android:paddingRight="@dimen/size_5"
                            android:textColorHint="@color/light_grey_box"
                            android:textSize="@dimen/text_size_14"

                            />

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingTop="@dimen/size_5"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/reports_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15"
                        android:text="@string/position"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/position_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:gravity="center_vertical"
                        android:hint="@string/position"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/size_15"
                        android:paddingRight="@dimen/size_5"
                        android:textColorHint="@color/light_grey_box"
                        android:textSize="@dimen/text_size_14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15"
                        android:text="@string/department"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                    <RelativeLayout
                        android:id="@+id/departmentview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size_10"
                        android:paddingRight="@dimen/size_10">

                        <Spinner
                            android:id="@+id/department_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:layout_toLeftOf="@id/imgr"
                            android:background="@null"
                            android:dropDownWidth="wrap_content"
                            android:dropDownVerticalOffset="@dimen/text_45"
                            android:forceHasOverlappingRendering="false"
                            android:gravity="center_vertical|start"
                            android:spinnerMode="dropdown"
                            android:textSize="@dimen/text_size_14" />

                        <ImageView
                            android:id="@+id/imgr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15"
                        android:text="@string/role"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />


                    <RelativeLayout
                        android:id="@+id/roleview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_45"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/size_10"
                        android:paddingRight="@dimen/size_10">

                        <Spinner
                            android:id="@+id/role_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:layout_toLeftOf="@id/imge"
                            android:background="@null"
                            android:dropDownWidth="wrap_content"
                            android:dropDownVerticalOffset="@dimen/text_45"
                            android:forceHasOverlappingRendering="false"
                            android:gravity="center_vertical|start"
                            android:spinnerMode="dropdown"
                            android:textSize="@dimen/text_size_14" />


                        <ImageView
                            android:id="@+id/imge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/contact_owner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15"
                        android:text="@string/contact_owner"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:visibility="gone" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:gravity="center_horizontal|center_vertical"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/size_4"
                            android:padding="@dimen/size_5"
                            android:src="@drawable/person" />

                        <EditText
                            android:id="@+id/contact_owner_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/image3"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/contact_owner"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/size_5"
                            android:paddingRight="@dimen/size_5"
                            android:textColorHint="@color/light_grey_box"
                            android:textSize="@dimen/text_size_14" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15"
                        android:text="@string/mobile"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:gravity="center_horizontal|center_vertical">

<!--                        <ImageView-->
<!--                            android:id="@+id/image4"-->
<!--                            android:layout_width="@dimen/size_30"-->
<!--                            android:layout_height="@dimen/size_30"-->
<!--                            android:layout_centerVertical="true"-->
<!--                            android:layout_marginLeft="@dimen/size_4"-->
<!--                            android:padding="@dimen/size_5"-->
<!--                            android:src="@drawable/ic_phone_icon" />-->

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/countryPickerPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_weight="20"
                            app:ccpDialog_cornerRadius="10dp"
                            app:ccp_autoDetectCountry="true"
                            app:ccp_showArrow="true"
                            app:ccp_showNameCode="false"
                            app:ccp_showPhoneCode="false"


                            />

                        <EditText

                            android:id="@+id/mobile_value"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/text_45"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/countryPickerPhone"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/mobile"
                            android:imeOptions="actionNext"
                            android:inputType="phone|number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/size_5"
                            android:paddingRight="@dimen/size_5"
                            android:textColorHint="@color/light_grey_box"
                            android:textSize="@dimen/text_size_14" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15"
                        android:text="@string/email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:id="@+id/image5"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/size_4"
                            android:padding="@dimen/size_5"
                            android:src="@drawable/ic_message" />

                        <EditText
                            android:id="@+id/email_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_45"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/image5"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/size_5"
                            android:paddingRight="@dimen/size_5"
                            android:textColorHint="@color/light_grey_box"
                            android:textSize="@dimen/text_size_14" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15"
                        android:text="@string/address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/rounded_box_background"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image7"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_marginLeft="@dimen/size_4"
                            android:padding="@dimen/size_5"
                            android:src="@drawable/ic_location_icon" />

                        <EditText
                            android:id="@+id/address_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_70"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/image7"
                            android:background="@null"
                            android:gravity="start"
                            android:hint="@string/address"
                            android:imeOptions="actionDone"
                            android:inputType="textPostalAddress|textMultiLine"
                            android:maxLength="200"
                            android:maxLines="2"
                            android:padding="@dimen/size_5"
                            android:textColorHint="@color/light_grey_box"
                            android:textSize="@dimen/text_size_14" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnCreateContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_50"
                        android:layout_marginBottom="@dimen/size_15"
                        android:background="@drawable/rounded_blue_background"
                        android:backgroundTint="@color/colorPrimary"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"

                        android:text="@string/create"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/loadingback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3B505050"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.loadingview.LoadingView
            android:id="@+id/loadingView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:lv_duration="30"
            app:lv_end_color="@color/color_end"
            app:lv_external_radius="24dp"
            app:lv_internal_radius="4dp"
            app:lv_start_color="@color/color_start" />
    </FrameLayout>
</FrameLayout>