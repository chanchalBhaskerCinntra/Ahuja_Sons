<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:topLeftRadius="@dimen/size_10" android:bottomLeftRadius="@dimen/size_10" android:bottomRightRadius="@dimen/size_10" />
            <solid android:color="@color/colorPrimary" />
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
            <stroke android:width="@dimen/size_4" android:color="@color/colorPrimary"/>
        </shape>
    </item>





    <!-- main background !-->
    <item>
        <shape>
            <corners android:topLeftRadius="@dimen/size_10" android:bottomLeftRadius="@dimen/size_10" android:bottomRightRadius="@dimen/size_10" ></corners>
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>


</layer-list>